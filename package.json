{
  "name": "terminal-loader",
  "displayName": "Terminal Loader",
  "description": "Open multiple terminals in a specific location and run command",
  "version": "2.0.0",
  "publisher": "ariassd",
  "icon": "assets/ico.png",
  "homepage": "https://github.com/ariassd/vscode-load-terminals/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/ariassd/vscode-load-terminals"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onCommand:extension.loadTerminals",
    "onCommand:extension.loadTrmGroups"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Terminal loader configuration settings",
        "order": 1,
        "properties": {
          "terminal-loader.config": {
            "type": "object",
            "description": "",
            "default": {
               "directory": "" 
            },
            "scope": "resource"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.loadTerminals",
        "title": "TLoader: Load Terminals"
      },
      {
        "command": "extension.loadTrmGroups",
        "title": "TLoader: Load Groups"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vscode-test": "^1.6.1"
  }
}
